                {viewMode === 'my-courses' && (
                  <>
                    <button className="flex items-center gap-1 px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-400 text-sm font-medium rounded-lg hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors">
                      <Edit className="w-3 h-3" />
                      Upravit
                    </button>
                    <button className="flex items-center gap-1 px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-400 text-sm font-medium rounded-lg hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors">
                      <Eye className="w-3 h-3" />
                      Statistiky
                    </button>
                  </>
                )}
                
                <button className="flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-700 hover:to-blue-700 text-white text-sm font-medium rounded-lg transition-all shadow-md hover:shadow-lg">
                  {viewMode === 'marketplace' ? 'Nabídnout zaměstnancům' : 'Spravovat účastníky'}
                  <ChevronRight className="w-3 h-3" />
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>

      {filteredCourses.length === 0 && (
        <div className="text-center py-12 text-slate-500 dark:text-slate-400">
          <ShoppingBag className="w-12 h-12 mx-auto mb-3 opacity-50" />
          <p className="text-lg font-medium">Nebyly nalezeny žádné kurzy</p>
          <p className="text-sm">Zkuste upravit vyhledávací kritéria nebo vytvořte nový kurz.</p>
        </div>
      )}
    </div>
  );
};

export default CompanyMarketplace;